<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/m1"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m1"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/banner" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcdWa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/md3"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/m1"
            app:cardElevation="@dimen/md3"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/wa"
                android:backgroundTint="@color/birulangit"
                android:scaleType="center" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcdIg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/md3"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/m1"
            app:cardElevation="@dimen/md3"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/instagram"
                android:backgroundTint="@color/birulangit"
                android:scaleType="center" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcdGithub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/md3"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/m1"
            app:cardElevation="@dimen/md3"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/gthb"
                android:backgroundTint="@color/birulangit"
                android:scaleType="center" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcdLinkedin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/md3"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/m1"
            app:cardElevation="@dimen/md3"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/linkedin"
                android:backgroundTint="@color/birulangit"
                android:scaleType="center" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/m1"
        app:cardElevation="@dimen/m2"
        app:strokeColor="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lilita_one"
            android:padding="12dp"
            android:text="@string/about_identity"
            android:textAlignment="inherit"
            android:textSize="14sp" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>